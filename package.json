{
	"name": "angelscript-complete",
	"displayName": "AngelScriptHelper",
	"description": "Angelscript helper",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.42.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"*"
	],
	"main": "./out/extension.js",
	"contributes": {
		"breakpoints": [
			{
				"language": "angelscript"
			}
		],
		"commands": [
			{
				"command": "extension.ash_build_project",
				"title": "Build project"
			},
			{
				"command": "extension.ash_build_current_file",
				"title": "Build file"
			},
			{
				"command": "extension.ash_get_program_name",
				"title": "Debug program"
			}
		],
		"configuration": {
			"title": "AngelScriptHelper",
			"properties": {
				"angelscript_helper.ashExeLocation": {
					"type": "string",
					"default": "",
					"description": "Location of ASH.exe"
				},
				"angelscript_helper.interfaceLocation": {
					"type": "string",
					"default": "",
					"description": "Location of the exported engine interface"
				},
				"angelscript_helper.moduleCacheDir": {
					"type": "string",
					"default": "",
					"description": "Location to place cached module reflections"
				},
				"angelscript_helper.sourceFile": {
					"type": "string",
					"default": "",
					"description": "main source file to compile"
				}
			}
		},
		"debuggers": [
			{
				"type": "ASH",
				"label": "ASH Debugger",
				"program": "./out/debugAdapter.js",
				"runtime": "node",
				"languages": [
					"angelscript"
				],
				"configurationAttributes": {
					"launch": {
						"required": [
							"program"
						],
						"properites": {
							"program": {
								"type": "string",
								"description": "The program to debug",
								"default": ""
							},
							"workingdir": {
								"type": "string",
								"description": "The working directory of the program",
								"default": ""
							},
							"address": {
								"type": "string",
								"description": "The ip address of the machine to debug.",
								"default": "localhost"
							},
							"port": {
								"type": "number",
								"description": "The port to the application",
								"default": "9202"
							},
							"arguments": {
								"type": "string",
								"description": "Extra arguments to the program",
								"default": ""
							}
						}
					}
				},
				"initialConfigurations": [
					{
						"type": "ASH",
						"request": "launch",
						"name": "Ash Debug",
						"program": "",
						"workingdir":"",
						"address":"localhost",
						"port":"9202",
						"arguments":""
					}
				],
				"configurationSnippets": [
					{
						"label": "AngelScript Debug: Launch",
						"description": "A new configuration for debugging an AngelScript program",
						"body": {
							"type": "ASH",
							"request": "launch",
							"name": "Ash Debugging",
							"program": "",
							"workingdir":"",
							"address":"localhost",
							"port":"9202",
							"arguments":""
							
						}
					}
				],
				"variables": {
					"AskForProgramName": "extension.ash_get_program_name"
				}
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"lint": "eslint src --ext ts",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.1.1",
		"@types/mocha": "^7.0.1",
		"@types/node": "^12.12.35",
		"@types/vscode": "^1.44.0",
		"@typescript-eslint/eslint-plugin": "^2.27.0",
		"@typescript-eslint/parser": "^2.27.0",
		"eslint": "^6.8.0",
		"glob": "^7.1.6",
		"mocha": "^7.1.1",
		"typescript": "^3.7.5",
		"vscode-test": "^1.3.0"
	},
	"dependencies": {
		"@types/ws": "^7.2.3",
		"await-notify": "1.0.1",
		"vscode-debugadapter": "1.40.0",
		"net": "1.0.2"
	}
}
